<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo branca -->
    <solid android:color="#FFFFFF"/>

    <!-- Borda sutil -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>

    <!-- Cantos arredondados -->
    <corners android:radius="16dp"/>

    <!-- Sombra (opcional) -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
</shape>