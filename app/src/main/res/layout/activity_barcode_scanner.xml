<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Câmera/Scanner -->
    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Novo overlay com retângulo + linha vermelha -->
    <br.com.ticpass.pos.compose.ui.commons.ViewFinderBarcodeOverlay
        android:id="@+id/overlayBarcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Ícone teclado (esquerda) -->
    <ImageButton
        android:id="@+id/btnOpenKeyboard"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="top|center"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_button_round"
        android:padding="10dp"
        android:src="@drawable/ic_keyboard"
        app:tint="@android:color/white" />

    <!-- Ícone fechar (direita) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_button_round"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:tint="@android:color/white" />

    <!-- Texto centralizado abaixo -->
    <TextView
        android:id="@+id/overlayPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="96dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        tools:text="Aponte para o código de barras" />

</FrameLayout>