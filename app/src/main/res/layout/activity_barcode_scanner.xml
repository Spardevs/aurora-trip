<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Câmera/Scanner -->
    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Novo overlay com retângulo + linha vermelha -->
    <br.com.ticpass.pos.compose.ui.commons.ViewFinderBarcodeOverlay
        android:id="@+id/overlayBarcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Ícone teclado (esquerda) -->
    <ImageButton
        android:id="@+id/btnOpenKeyboard"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="top|center"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_button_round"
        android:padding="10dp"
        android:src="@drawable/ic_keyboard"
        app:tint="@android:color/white" />

    <!-- Ícone fechar (direita) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@drawable/bg_icon_button_round"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:tint="@android:color/white" />

    <!-- Container de informações do código de barras -->
    <LinearLayout
        android:id="@+id/barcodeInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_barcode_info"
        android:visibility="gone">

        <!-- Status do scan -->
        <TextView
            android:id="@+id/tvScanStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            tools:text="✓ Código Válido" />

        <!-- Formato do código -->
        <TextView
            android:id="@+id/tvBarcodeFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            tools:text="Formato: EAN-13" />

        <!-- Código de barras (texto) -->
        <TextView
            android:id="@+id/tvBarcodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            tools:text="7891234567890" />

        <!-- Código de barras visual (ImageView) -->
        <ImageView
            android:id="@+id/ivBarcodeImage"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Código de barras visual" />



    </LinearLayout>

    <!-- Adicione dentro do root FrameLayout (p.ex. logo acima do barcodeInfoContainer) -->
    <FrameLayout
        android:id="@+id/refundStatusContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />


</FrameLayout>