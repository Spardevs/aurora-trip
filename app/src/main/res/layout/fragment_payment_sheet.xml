<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_sheet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/payment_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llPaymentSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/payment_sheet_info"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/bg_linear_rounded"
                android:backgroundTint="@color/colorGreen"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textColor="@color/colorWhite"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/tvItemCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    android:text="/ 23 itens"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintStart_toEndOf="@id/tvTotalPrice"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toEndOf="@id/llPaymentSheet"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_linear_rounded"
                    android:backgroundTint="#E7E8FD"
                    android:elevation="2dp"
                    android:layout_margin="8dp"
                    android:padding="12dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_cart"
                    app:tint="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPaymentSheetExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/payment_sheet_info_expanded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp"
                android:background="@drawable/bg_linear_rounded"
                android:backgroundTint="@color/colorGreen"
                android:elevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="subtotal"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/txtSubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:gravity="end"
                        android:text="R$ 1.000,00"
                        app:layout_constraintEnd_toEndOf="@id/titleSubtotal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleCommission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="comissÃ£o do atendente"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/txtCommission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:gravity="end"
                        android:text="R$ 1.000,00"
                        app:layout_constraintEnd_toEndOf="@id/titleSubtotal"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:text="Total"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:text="R$ 1.000,00"
                        app:layout_constraintEnd_toEndOf="@id/titleSubtotal"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment_forms_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:background="@drawable/bg_drawer"
                android:backgroundTint="@color/colorGreen"
                android:orientation="vertical"
                android:padding="12dp">

                <GridLayout
                    android:id="@+id/payment_methods_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_payment_method"
                    tools:itemCount="4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>