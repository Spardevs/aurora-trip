<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Payment Information Header -->
    <TextView
        android:id="@+id/text_payment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next_payment_progress"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Amount Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_amount"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_payment_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/payment_amount_hint"
        android:layout_marginBottom="8dp" />

    <!-- Payment Method Field -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/payment_method"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- Processor type is automatically selected based on payment method -->

    <!-- Note about editing -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_payment_note"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />
        
    <!-- Timeout Countdown View -->
    <br.com.ticpass.pos.payment.view.TimeoutCountdownView
        android:id="@+id/timeout_countdown_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
