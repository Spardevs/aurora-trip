<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Timeout Countdown View -->
    <br.com.ticpass.pos.common.view.TimeoutCountdownView
        android:id="@+id/timeout_countdown_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Paper Cut Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Full Cut Button -->
        <Button
            android:id="@+id/btn_full_cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/paper_cut_full"
            android:textSize="16sp"
            android:padding="12dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <!-- Partial Cut Button -->
        <Button
            android:id="@+id/btn_partial_cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/paper_cut_partial"
            android:textSize="16sp"
            android:padding="12dp"
            style="@style/Widget.AppCompat.Button.Colored" />

        <!-- No Cut Button -->
        <Button
            android:id="@+id/btn_no_cut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paper_cut_none"
            android:textSize="16sp"
            android:padding="12dp"
            style="@style/Widget.AppCompat.Button"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
