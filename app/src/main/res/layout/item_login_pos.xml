<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewPos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_cash_register"
            app:tint="@color/colorGreen" />

        <TextView
            android:id="@+id/textViewPosClosing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="Fechado"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewPosName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caixa - 001"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPOSCommission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10% de comissÃ£o"
            android:textAlignment="center"
            android:textSize="8sp"
            android:textStyle="italic" />

    </LinearLayout>
</androidx.cardview.widget.CardView>