<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/passCutInHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cut_in_here"
        android:visibility="gone"
        android:contentDescription="Cut in here"/>

    <LinearLayout
        android:id="@+id/passInfo"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="@string/cash_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="7dp">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/credit"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="TICPASS"
                />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="27/01/2024 - 11/09/2025"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/barcodeImageView">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="7dp">
            <TextView
                android:id="@+id/menuName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Caixa: CAIXA-003"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/attendantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="ResponsaÌvel: Teste teste"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/datePrinter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="31/07/2025 12:46"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/passDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textAlignment="center"
        android:paddingTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/passInfo"/>
</LinearLayout>